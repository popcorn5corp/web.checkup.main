{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "none",
  "importOrder": [
    "^@/services/(.*)$",
    "^@/stores/(.*)$",
    "^@/utils/(.*)$",
    "^@/helpers/(.*)$",
    "^@/plugins/(.*)$",
    "^@/styles/(.*)$",
    "^@/locales/(.*)$",
    "^@/hooks/(.*)$",
    "^@/views/(.*)$",
    "^@/components/(.*)$",
    "^@/enums/(.*)$",
    "^@/constants/(.*)$",
    "^@/config/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true
}
